<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoeapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sneaker"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_android_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoeApp">
        <activity android:name=".DisplayProduct"></activity>
        <activity android:name=".ForgotPassword" />
        <activity android:name=".CreatAccount" />
        <activity android:name=".Login" />
        <activity android:name=".Uploadforms" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ShoeApp.NoActionBar" />
        <activity android:name=".UploadForm" />
        <activity android:name=".ShoeActivity" />
        <activity
            android:name=".menu"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".OnboardingScreen"
            android:label="@string/title_activity_onboarding_screen"
            android:theme="@style/Theme.ShoeApp.NoActionBar" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>